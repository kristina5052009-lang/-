// Prisma schema for Olympiad project

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Level {
  BASIC
  ADVANCED
}

enum ProgressStatus {
  IN_PROGRESS
  COMPLETED
}

model User {
  id           String        @id @default(cuid())
  name         String
  email        String?       @unique
  phone        String?       @unique
  snils        String?       @unique
  passwordHash String
  level        Level         @default(BASIC)
  createdAt    DateTime      @default(now())
  progress     Progress[]
  achievements Achievement[]
  quizAttempts QuizAttempt[]
}

model Progress {
  id        String         @id @default(cuid())
  userId    String
  courseId  String
  stepId    String
  status    ProgressStatus @default(IN_PROGRESS)
  updatedAt DateTime       @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId, stepId])
}

model Achievement {
  id          String   @id @default(cuid())
  userId      String
  code        String
  title       String
  description String
  unlockedAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, code])
}

model QuizAttempt {
  id        String   @id @default(cuid())
  userId    String
  courseId  String
  score     Int
  maxScore  Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
